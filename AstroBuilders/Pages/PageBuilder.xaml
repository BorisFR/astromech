<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AstroBuilders.PageBuilder" 
xmlns:local="clr-namespace:AstroBuilders;assembly=AstroBuilders" Padding="6,24,6,6" BackgroundColor="{local:ColorBgResource}">
	<ContentPage.Content>
		<ScrollView Orientation="Vertical" BackgroundColor="{local:ColorBgResource}" Padding="6">
			<StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">

				<Grid HorizontalOptions="Fill" ColumnSpacing="0" RowSpacing="0">
			        <Grid.ColumnDefinitions>
			            <ColumnDefinition Width="100*"/>
			            <ColumnDefinition Width="100*"/>
			        </Grid.ColumnDefinitions>
			        <Grid.RowDefinitions>
			        	<RowDefinition Height="40" />
			        	<RowDefinition Height="*" />
			        </Grid.RowDefinitions>

			        <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand" VerticalOptions="Center" Grid.ColumnSpan="2">
						<local:StarJedi Text="{local:TextResource PageBuilderTitle}" FontSize="{local:FontSizeResource Medium}" TextColor="{local:ColorTextResource}" VerticalOptions="Center" />
						<local:StarJedi Text=" / " FontSize="{local:FontSizeResource Medium}" TextColor="{local:ColorTextResource}" VerticalOptions="Center" />
						<local:AurekBesh Text="{local:TextResource PageBuilderTitle}" FontSize="{local:FontSizeResource Small}" TextColor="{local:ColorTextResource}" VerticalOptions="Center"/>
					</StackLayout>
					<Image x:Name="imgClose" Source="{local:ImageResource closewindow.png}" HorizontalOptions="End" WidthRequest="32" HeightRequest="32" Grid.Column="1" />

					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource MiniBorder}" Padding="3" Grid.Column="0" Grid.Row="1">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource}" Padding="6">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Border}" Padding="6">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Box}" Padding="4">
						<Label Text="{Binding Title}" FontSize="{local:FontSizeResource Default}" HorizontalOptions="Center" TextColor="{local:ColorTextResource BoxHigh}" />
						<Image Source="{Binding Logo}" WidthRequest="200" />
					</StackLayout>
					</StackLayout>
					</StackLayout>
					</StackLayout>

					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource MiniBorder}" Padding="3" Grid.Column="1" Grid.Row="1">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource}" Padding="6">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Border}" Padding="6">
					<StackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Box}" Padding="4">
						<Label Text="{Binding NickName}" FontSize="{local:FontSizeResource Large}" TextColor="{local:ColorTextResource Box}" HorizontalOptions="Center" />
						<Image x:Name="imgClub" HorizontalOptions="End"  WidthRequest="200" />
					</StackLayout>
					</StackLayout>
					</StackLayout>
					</StackLayout>

				</Grid>

				<BoxView HeightRequest="12" BackgroundColor="Transparent" />

				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource MiniBorder}" Padding="3" >
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource}" Padding="6">
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Border}" Padding="6">
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Box}" Padding="4">
					<Label Text="{local:TextResource PageBuilderClub}" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
					<Label x:Name="lClub" TextColor="{local:ColorTextResource Box}" HorizontalOptions="Center" Text="Builder's club" FontSize="{local:FontSizeResource Default}" />
					<Label Text="{Binding Email}" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
					<Label Text="{Binding Blog}" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
					<Label Text="{Binding Facebook}" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
					<Label x:Name="lLocation" Text="Location -" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
					<Label x:Name="lDroids" Text="Droïdes -" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
				</StackLayout>
				</StackLayout>
				</StackLayout>
				</StackLayout>

				<BoxView HeightRequest="12" BackgroundColor="Transparent" />

				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource MiniBorder}" Padding="3" >
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource}" Padding="6">
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Border}" Padding="6">
				<StackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="{local:ColorBgResource Box}" Padding="4">
					<Label Text="{Binding Detail}" TextColor="{local:ColorTextResource Box}" FontSize="{local:FontSizeResource Default}" />
				</StackLayout>
				</StackLayout>
				</StackLayout>
				</StackLayout>

				<BoxView HeightRequest="12" BackgroundColor="Transparent" />

				<Button Text="{local:TextResource PageBuilderBack}" Clicked="ButtonClicked" TextColor="{local:ColorTextResource Box}" BackgroundColor="{local:ColorBgResource Box}" FontSize="{local:FontSizeResource Default}" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>