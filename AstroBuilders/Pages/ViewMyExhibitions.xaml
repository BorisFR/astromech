<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AstroBuilders.ViewMyExhibitions" 
xmlns:local="clr-namespace:AstroBuilders;assembly=AstroBuilders">
	<ContentView.Content>
	<ScrollView Orientation="Vertical">
		<StackLayout Orientation="Vertical" Padding="12" BackgroundColor="White">
			<local:StarJedi Text="{local:TextResource ViewMyExhibitionsTitle}" FontSize="{local:FontSizeResource Medium}" TextColor="Black" HorizontalOptions="Center" />
			<Label Text="{local:TextResource ViewMyExhibitionsAdmin}" Font="Medium" TextColor="Black" HorizontalOptions="Center" />
			<Button x:Name="btCreateExhibition" Text="{local:TextResource ViewMyExhibitionsBtCreate}" TextColor="Black" BackgroundColor="White" />

			<BoxView HeightRequest="4" BackgroundColor="Gray" />
			<Label Text="{local:TextResource ViewMyExhibitionsActor}" Font="Medium" TextColor="Black" HorizontalOptions="Center" />
			 
		</StackLayout>
	</ScrollView>
	</ContentView.Content>
</ContentView>